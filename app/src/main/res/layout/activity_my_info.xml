<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar"/>

        <RelativeLayout
            android:id="@+id/rl_head_img"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/view_white_selector"
            android:onClick="headImage"
            android:paddingLeft="26dp">

            <TextView
                style="@style/MineFeedbackTvStyle"
                android:text="头像"
                android:textColor="@color/black_333333"/>

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/iv_arr_head"/>

            <ImageView
                android:id="@+id/iv_arr_head"
                style="@style/MineFeedbackIvStyle"
                android:layout_marginEnd="26dp"
                android:layout_marginStart="15dp"/>
        </RelativeLayout>

        <View
            style="@style/LineHorizontalStyle"
            android:layout_marginStart="26dp"
            android:background="@color/gray_eeeeee"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:paddingLeft="26dp">

            <TextView
                style="@style/MineFeedbackTvStyle"
                android:text="账号"
                android:textColor="@color/black_333333"/>

            <TextView
                android:id="@+id/tv_username"
                style="@style/MineFeedbackTvStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="26dp"
                android:text="13757170142"
                android:textColor="@color/gray_999999"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray_fafafa"/>

        <RelativeLayout
            android:id="@+id/rl_qq"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/view_white_selector"
            android:onClick="qq"
            android:paddingLeft="26dp">

            <TextView
                style="@style/MineFeedbackTvStyle"
                android:text="QQ"
                android:textColor="@color/black_333333"/>

            <TextView
                android:id="@+id/tv_qq"
                style="@style/MineFeedbackTvStyle"
                android:layout_toStartOf="@+id/iv_arr_qq"
                android:text="未绑定"
                android:textColor="@color/gray_999999"/>

            <ImageView
                android:id="@+id/iv_arr_qq"
                style="@style/MineFeedbackIvStyle"
                android:layout_marginEnd="26dp"
                android:layout_marginStart="15dp"/>
        </RelativeLayout>

        <View
            style="@style/LineHorizontalStyle"
            android:layout_marginStart="26dp"
            android:background="@color/gray_eeeeee"
            />

        <RelativeLayout
            android:id="@+id/rl_we_chat"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/view_white_selector"
            android:onClick="weChat"
            android:paddingLeft="26dp">

            <TextView
                style="@style/MineFeedbackTvStyle"
                android:text="微信"
                android:textColor="@color/black_333333"/>

            <TextView
                android:id="@+id/tv_we_chat"
                style="@style/MineFeedbackTvStyle"
                android:layout_toStartOf="@+id/iv_arr_we_chat"
                android:text="weixin-LM"
                android:textColor="@color/gray_999999"/>

            <ImageView
                android:id="@+id/iv_arr_we_chat"
                style="@style/MineFeedbackIvStyle"
                android:layout_marginEnd="26dp"
                android:layout_marginStart="15dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray_fafafa"/>

        <RelativeLayout
            android:id="@+id/rl_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/view_white_selector"
            android:onClick="bindPhone"
            android:paddingLeft="26dp">

            <TextView
                style="@style/MineFeedbackTvStyle"
                android:text="绑定手机"
                android:textColor="@color/black_333333"/>

            <TextView
                android:id="@+id/tv_bind_phone"
                style="@style/MineFeedbackTvStyle"
                android:layout_toStartOf="@+id/iv_arr_bind_phone"
                android:text="13757170142"
                android:textColor="@color/gray_999999"/>

            <ImageView
                android:id="@+id/iv_arr_bind_phone"
                style="@style/MineFeedbackIvStyle"
                android:layout_marginEnd="26dp"
                android:layout_marginStart="15dp"/>
        </RelativeLayout>

        <View
            style="@style/LineHorizontalStyle"
            android:layout_marginStart="26dp"
            android:background="@color/gray_eeeeee"
            />

        <RelativeLayout
            android:id="@+id/rl_modify_pwd"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/view_white_selector"
            android:onClick="modifyPwd"
            android:paddingLeft="26dp">

            <TextView
                style="@style/MineFeedbackTvStyle"
                android:text="修改密码"
                android:textColor="@color/black_333333"/>

            <TextView
                android:id="@+id/tv_modify_pwd"
                style="@style/MineFeedbackTvStyle"
                android:layout_toStartOf="@+id/iv_arr_modify_pwd"
                android:textColor="@color/gray_999999"/>

            <ImageView
                android:id="@+id/iv_arr_modify_pwd"
                style="@style/MineFeedbackIvStyle"
                android:layout_marginEnd="26dp"
                android:layout_marginStart="15dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray_fafafa"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/view_white_selector"
            android:gravity="center_vertical"
            android:onClick="logout"
            android:paddingLeft="26dp"
            android:text="退出登录"
            android:textColor="@color/red_f44336"
            android:textSize="15sp"/>
    </LinearLayout>
</layout>