<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar_no_title"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="36dp"
            android:text="注册三点智能门锁"
            android:textColor="@color/black_333333"
            android:textSize="24sp"/>

        <RelativeLayout
            android:id="@+id/rl_name"
            style="@style/InputItemLayoutStyle"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/tv_label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="@color/black_333333"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/et_enterNum"
                style="@style/InputStyle"
                android:layout_below="@+id/tv_label_name"
                android:layout_marginTop="22dp"
                android:hint="请输入手机号码"/>

            <View
                style="@style/LineHorizontalStyle"
                android:layout_below="@id/et_enterNum"
                android:layout_marginTop="11dp"
                android:background="@color/gray_eeeeee"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_tips"
            style="@style/ErrTipTvStyle"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btn_next"
            style="@style/GreenButtonStyle"
            android:layout_marginTop="50dp"
            android:onClick="nextStep"
            android:text="下一步"/>

        <TextView
            android:id="@+id/tv_agree"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:textColor="@color/black_333333"
            android:textSize="13sp"/>
    </LinearLayout>
</layout>