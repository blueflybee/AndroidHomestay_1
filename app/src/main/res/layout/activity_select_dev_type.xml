<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar"/>

        <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical">-->

        <RelativeLayout
            android:id="@+id/rl_router"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/view_white_selector"
            android:onClick="addRouter">

            <ImageView
                android:id="@+id/iv_router"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="60dp"
                android:background="@mipmap/s_router"/>

            <TextView
                style="@style/NormalTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="90dp"
                android:text="安全网关"
                android:textSize="16sp"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_fafafa"/>

        <RelativeLayout
            android:id="@+id/rl_lock"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/view_white_selector"
            android:onClick="addLock">

            <ImageView
                android:id="@+id/iv_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="66dp"
                android:background="@mipmap/s_lock"/>

            <TextView
                style="@style/NormalTextViewStyle"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="90dp"
                android:text="智能门锁"
                android:textSize="16sp"/>
        </RelativeLayout>


    </LinearLayout>
    <!--</ScrollView>-->
    <!--</LinearLayout>-->
</layout>